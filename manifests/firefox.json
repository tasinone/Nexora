{
  "manifest_version": 2,
  "name": "Nexora",
  "version": "1.0.0",
  "description": "The Startpage Reimagined",
  "author": "RH Tasin",
  "permissions": [
    "bookmarks",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "nexora@yourdomain.com",
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}